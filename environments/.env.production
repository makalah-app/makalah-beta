# PRODUCTION ENVIRONMENT CONFIGURATION
# This file contains production defaults
# Actual secrets MUST be set via environment variables or secret management

NODE_ENV=production
# NEXT_PUBLIC_APP_URL must be set via environment variable

# Production logging (minimal)
LOG_LEVEL=warn
ENABLE_DEBUG_MODE=false
ENABLE_TESTING_MODE=false
ENABLE_DEBUG_PANEL=false

# Production database - URLs set via environment
# NEXT_PUBLIC_SUPABASE_URL=set_via_environment
# SUPABASE_SERVICE_ROLE_KEY=set_via_environment
# SUPABASE_JWT_SECRET=set_via_environment

# NextAuth (production values)
# NEXTAUTH_URL=set_via_environment
# NEXTAUTH_SECRET=set_via_environment_64_chars_minimum

# Production AI settings (conservative)
PRIMARY_MODEL_TEMPERATURE=0.7
FALLBACK_MODEL_TEMPERATURE=0.7
AI_REQUESTS_PER_HOUR=60
MAX_TOKENS_PER_REQUEST=4000

# Disable development features
ENABLE_SOURCE_MAPS=false
ENABLE_REACT_STRICT_MODE=false
ENABLE_WEBPACK_ANALYZER=false

# Production security (strict)
API_KEY_ROTATION_WARNING_DAYS=30
API_KEY_ROTATION_REQUIRED_DAYS=90
SESSION_TIMEOUT_MINUTES=60
FORCE_HTTPS=true

# Academic workflow (production settings)
ENABLE_APPROVAL_GATES=true
MAX_PHASES_PER_SESSION=7
AUTO_SAVE_INTERVAL=30000

# Monitoring enabled
ENABLE_ANALYTICS=true
SENTRY_ENVIRONMENT=production

# Performance optimizations
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_TOKENS_PER_MINUTE=50000
RATE_LIMIT_BURST_SIZE=5

# Health check settings
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=10000
PROVIDER_RETRY_ATTEMPTS=2
PROVIDER_RETRY_DELAY=2000