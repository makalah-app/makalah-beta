# Makalah AI - Example Environment Variables
# NOTE:
# - This file is safe to commit (placeholders only)
# - Copy to .env.local and fill with REAL secrets from your secret manager
# - Do NOT commit .env.local

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-me-32chars-minimum

# OpenAI (Primary)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_BASE_URL=https://api.openai.com/v1
PRIMARY_MODEL=gpt-4o
PRIMARY_MODEL_MAX_TOKENS=8192
PRIMARY_MODEL_TEMPERATURE=0.7

# OpenRouter (Fallback)
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
FALLBACK_MODEL=google/gemini-2.5-flash
FALLBACK_MODEL_MAX_TOKENS=4096
FALLBACK_MODEL_TEMPERATURE=0.7

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT_REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...[JWT_PLACEHOLDER].example
SUPABASE_SERVICE_ROLE_KEY=eyJ...[JWT_PLACEHOLDER].example
SUPABASE_JWT_SECRET=base64-encoded-secret-64-chars-min

# Database (use placeholders, never real creds in docs/examples)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres

# Upstash Redis (optional)
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=upstash-token-placeholder
UPSTASH_REDIS_REST_READONLY_TOKEN=upstash-readonly-token-placeholder

# Rate limiting / health (sane defaults)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=100000
RATE_LIMIT_BURST_SIZE=10
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
PROVIDER_RETRY_ATTEMPTS=3
PROVIDER_RETRY_DELAY=1000

# App settings
NODE_ENV=development
LOG_LEVEL=debug
DEBUG_AI_CALLS=false

# Optional providers (leave empty if unused)
# PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxx
# AI_GATEWAY_API_KEY=vck_xxxxxxxxxxxxxxxx

