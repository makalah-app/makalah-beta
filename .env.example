# MAKALAH AI - ENVIRONMENT CONFIGURATION TEMPLATE
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# ==============================================================================
# ENVIRONMENT CONFIGURATION
# ==============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================================================
# AI PROVIDER CONFIGURATION
# ==============================================================================

# OpenAI (Primary Provider)
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenRouter (Fallback Provider)
OPENROUTER_API_KEY=sk-or-v1-YOUR_OPENROUTER_API_KEY_HERE
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=google/gemini-2.5-pro

# Perplexity (Web Search)
PERPLEXITY_API_KEY=pplx-YOUR_PERPLEXITY_API_KEY_HERE

# ==============================================================================
# DATABASE CONFIGURATION (Supabase)
# ==============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Database URL for direct connections
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres

# ==============================================================================
# AUTHENTICATION (NextAuth.js)
# ==============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_32_chars_minimum

# ==============================================================================
# SECRETS MANAGEMENT
# ==============================================================================
# Master key for encrypting stored secrets (generate with: openssl rand -hex 32)
SECRETS_MASTER_KEY=your_64_character_hex_master_key_here

# ==============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ==============================================================================
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here
UPSTASH_REDIS_REST_READONLY_TOKEN=your_upstash_readonly_token_here

# ==============================================================================
# GITHUB INTEGRATION (Optional)
# ==============================================================================
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_YOUR_GITHUB_TOKEN_HERE
GITHUB_USERNAME=your_github_username
PROJECT_GITHUB_REPO=your_repository_name

# ==============================================================================
# AI MODEL CONFIGURATION
# ==============================================================================
DEFAULT_AI_PROVIDER=openai
DEFAULT_MODEL=gpt-4o
FALLBACK_PROVIDER=openrouter
FALLBACK_MODEL=google/gemini-2.5-pro

# Primary Model Settings
PRIMARY_MODEL=gpt-4o
PRIMARY_MODEL_MAX_TOKENS=8192
PRIMARY_MODEL_TEMPERATURE=0.7

# Fallback Model Settings
FALLBACK_MODEL_MAX_TOKENS=4096
FALLBACK_MODEL_TEMPERATURE=0.7

# ==============================================================================
# RATE LIMITING & PERFORMANCE
# ==============================================================================
AI_REQUESTS_PER_HOUR=60
MAX_TOKENS_PER_REQUEST=4000

# ==============================================================================
# ACADEMIC WORKFLOW CONFIGURATION
# ==============================================================================
ENABLE_APPROVAL_GATES=true
MAX_PHASES_PER_SESSION=7
AUTO_SAVE_INTERVAL=30000

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
MAKALAH_AI_VERSION=1.0.0
MAKALAH_AI_ENVIRONMENT=development

# Development Settings
LOG_LEVEL=debug
ENABLE_DEBUG_MODE=true
ENABLE_TESTING_MODE=true
ENABLE_DEBUG_PANEL=true
ENABLE_MOCK_TOOLS=false

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================
# API Key rotation alerts (days)
API_KEY_ROTATION_WARNING_DAYS=30
API_KEY_ROTATION_REQUIRED_DAYS=90

# Session configuration
SESSION_TIMEOUT_MINUTES=120
FORCE_HTTPS=false

# ==============================================================================
# MONITORING & ANALYTICS (Optional)
# ==============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=GA-YOUR_ID_HERE
ENABLE_ANALYTICS=false

# ==============================================================================
# DEVELOPMENT TOOLS
# ==============================================================================
# Enable specific development features
ENABLE_REACT_STRICT_MODE=true
ENABLE_WEBPACK_ANALYZER=false
ENABLE_SOURCE_MAPS=true