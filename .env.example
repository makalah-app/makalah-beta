# Makalah AI Environment Configuration
# =====================================
# Copy this file to .env.local and fill in your actual values

# Primary AI Provider - OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Primary Model Configuration
PRIMARY_MODEL=gpt-4o
PRIMARY_MODEL_MAX_TOKENS=8192
PRIMARY_MODEL_TEMPERATURE=0.7

# Fallback AI Provider - OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Fallback Model Configuration
FALLBACK_MODEL=google/gemini-2.5-flash
FALLBACK_MODEL_MAX_TOKENS=4096
FALLBACK_MODEL_TEMPERATURE=0.7

# Provider Health Check Settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
PROVIDER_RETRY_ATTEMPTS=3
PROVIDER_RETRY_DELAY=1000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=100000
RATE_LIMIT_BURST_SIZE=10

# Academic Workflow Configuration
ACADEMIC_PHASES_ENABLED=true
APPROVAL_GATES_ENABLED=true
WORKFLOW_TIMEOUT=300000

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
DEBUG_AI_CALLS=true

# Database Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000