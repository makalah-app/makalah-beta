# Local Development Environment Configuration
# =========================================
# Copy this file to .env.local and fill in your actual API keys

# AI Providers - Get your API keys from:
# OpenRouter: https://openrouter.ai/keys
# OpenAI: https://platform.openai.com/api-keys

# Fallback  Model Configuration
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Primary AI Provider - OpenAI
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

# Model Configuration for Development
PRIMARY_MODEL=google/gemini-2.5-flash-thinking-exp-1219
FALLBACK_MODEL=gpt-4o-mini

# Development Settings
NODE_ENV=development
LOG_LEVEL=info
DEBUG_AI_CALLS=false

# Rate Limiting (Relaxed for Development)
RATE_LIMIT_REQUESTS_PER_MINUTE=120
RATE_LIMIT_TOKENS_PER_MINUTE=200000
RATE_LIMIT_BURST_SIZE=20

# Health Check Settings (Faster for Development)
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=3000
PROVIDER_RETRY_ATTEMPTS=2
PROVIDER_RETRY_DELAY=500

# Academic Workflow (Enabled for Testing)
ACADEMIC_PHASES_ENABLED=true
APPROVAL_GATES_ENABLED=true
WORKFLOW_TIMEOUT=600000

# Local Development URLs
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=development-secret-key-please-change-in-production

# Supabase Local Development (Optional)
# SUPABASE_URL=http://localhost:54321
# SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_KEY=